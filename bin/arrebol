#!/bin/bash

. arrebol.properties

print_menu() {
	echo "Usage: $0 COMMAND [OPTIONS]"
	echo "Commands are GET, POST, STOP or GETUI"
	echo "GET | GET [job_id || friendly_name]"
	echo "POST jdffilepath [s | --schedpath path] [-f | --friendly friendly_name]"
	echo "STOP [job_id || friendly_name]"
	exit 1
}

do_get() {
	if [ $# -eq 0 ]
	then
		response=$(curl -G "$host/arrebol/job" 2> /dev/null)
		echo $response
	elif [ $# -eq 1 ]
	then
        	response=$(curl -G "$host/arrebol/job/$1" 2> /dev/null)
        	echo $response
	else
		print_menu
		exit 1
	fi
}

define_parameters() {
	while [ ! -z $1 ]; do
		case $1 in
			-s | --schedpath)
				shift;
				schedpath=$1;
				;;
			-f | --friendly)
				shift;
				friendly=$1;
				;;
		esac
		shift
	done
}

do_post() {
	local jdffilepath=$1
        if [ -f $jdffilepath ]
	then
		shift
        	define_parameters $@
		base_curl_cmd="curl -X POST --form jdffilepath=${jdffilepath}"
                if [[ $schedpath ]]
		then
			base_curl_cmd="${base_curl_cmd} --form schedpath=${schedpath}"
		fi
                if [[ $friendly ]]
		then
			base_curl_cmd="${base_curl_cmd} --form friendly=${friendly}"
		fi
		base_curl_cmd="${base_curl_cmd} $host/arrebol/job"
        	response=$($base_curl_cmd 2> /dev/null)
                echo $response
	else
        	echo "Error: jdffilepath<$jdffilepath> not found."
                exit 1
        fi
}

do_stop() {
	if [ $# -eq 1 ]
	then
        	response=$(curl -X DELETE "$host/arrebol/job/$1" 2> /dev/null)
                echo $response
        else
		print_menu
		exit 1
        fi
}

do_getui() {
	response=$(curl -G "$host/arrebol/job/ui" 2> /dev/null)
	echo $response
}

if [ $# -gt 0 ]
then
	op=$1
    case "$op" in
        GET)
            shift
            do_get $@
            ;;
        POST)
            shift
            do_post $@
            ;;
        STOP)
            shift
            do_stop $@
            ;;
        GETUI)
            shift
            do_getui
            ;;
        *)
            print_menu
            exit 1
            ;;
    esac
else
	print_menu
	exit 1
fi
