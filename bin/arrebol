#!/bin/bash

. arrebol.properties

print_menu() {
	echo "Usage: $0 COMMAND [OPTIONS]"
	echo "Commands are GET, POST, STOP or GETUI"
	echo "GET | GET [job_id || friendly_name] -u | --username ldap username -p | --password ldap password"
	echo "POST jdffilepath [s | --schedpath path] -u | --username ldap username -p | --password ldap password"
	echo "STOP [job_id || friendly_name] -u | --username ldap username -p | --password ldap password"
	echo "CREATEUSER -u | --username username"
	exit 1
}

do_get() {

	define_parameters $@
	inputPassword
	if [ $# -eq 2 ]
	then
		response=$(curl -G -H "X-auth-credentials: { username: '$username', password: '$password' }" "$host/arrebol/job" 2> /dev/null)
		echo $response
	elif [ $# -eq 3 ]
	then
        	response=$(curl -G -H "X-auth-credentials: { username: '$username', password: '$password' }" "$host/arrebol/job/$1" 2> /dev/null)
        	echo $response
	else
		print_menu
		exit 1
	fi
}

do_get_nonce() {
	nonce=$(curl -G "$host/arrebol/nonce" 2> /dev/null)
}

inputCertificate() {
	echo -n certificate location:
	read location
	password=$(cat $location)
}

inputPassword() {
	echo -n Password: 
	read -s password
	echo
}

define_parameters() {
	while [ ! -z $1 ]; do
		case $1 in
			-s | --schedpath)
				shift;
				schedpath=$1;
				;;
			-f | --friendly)
				shift;
				friendly=$1;
				;;
			-u | --username)
				shift;
				username=$1;
				;;
		esac
		shift
	done
}

do_post() {
	local jdffilepath=$1
        if [ -f $jdffilepath ]
	then
		shift
        	define_parameters $@
		inputPassword
		base_curl_cmd="curl -X POST --form jdffilepath=${jdffilepath} --form X-auth-credentials={username:'$username',password:'$password'}"
		if [[ $schedpath ]]
		then
			base_curl_cmd="${base_curl_cmd} --form schedpath=${schedpath}"
		fi
		base_curl_cmd="${base_curl_cmd} $host/arrebol/job"
        	response=$($base_curl_cmd 2> /dev/null)
                echo $response
	else
        	echo "Error: jdffilepath<$jdffilepath> not found."
                exit 1
        fi
}

do_stop() {
	if [ $# -eq 5 ]
	then
		define_parameters $@
		inputPassword
        	response=$(curl -X DELETE -H "X-auth-credentials: { username: '$username', password: '$password' }" "$host/arrebol/job/$1" 2> /dev/null)
                echo $response
        else
		print_menu
		exit 1
        fi
}

create_user() {
	if [ $# -eq 2 ]
	then
		define_parameters $@
		arrebol_certificates_dir="$HOME/.arrebol/$username"
		echo "Creating certificates directory for the user $username: $arrebol_certificates_dir"
		mkdir -p $arrebol_certificates_dir
		echo "Generating your private key file in RSA format"
		openssl genrsa -out "$arrebol_certificates_dir/private.rsa" 2048
		echo "Generating your public key file in RSA format"
		openssl rsa -in "$arrebol_certificates_dir/private.rsa" -outform PEM -pubout -out "$arrebol_certificates_dir/public.rsa"
		echo "Your public and private keys are in: $arrebol_certificates_dir"
		echo "Requesting the creation of the user $username with the public key in $arrebol_certificates_dir/public.rsa"
		response=$(curl -X POST --form "username=$username" --form "publicKey=@$arrebol_certificates_dir/public.rsa" "$host/arrebol/user" 2> /dev/null)
		echo $response
	else
		print_menu
		exit 1
	fi
}

if [ $# -gt 0 ]
then
    op=$1
    case "$op" in
        GET)
            shift
            do_get_nonce
            do_get $@
        ;;
        POST)
            shift
            do_get_nonce
            do_post $@
        ;;
        STOP)
            shift
            do_get_nonce
            do_stop $@
        ;;
        CREATEUSER)
            shift
            create_user $@
        ;;
        *)
            print_menu
            exit 1
        ;;
    esac
else
	print_menu
	exit 1
fi
